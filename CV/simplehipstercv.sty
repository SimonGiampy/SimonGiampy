\newcommand{\simpleheader}[4]{% #1: Background Color, #2: Name, #3: Subtitle, #4: Text Color
\begin{minipage}[t][3.5cm][c]{\textwidth}
    \begin{tikzpicture}[remember picture, overlay]
        % Background rectangle
        \node[rectangle, fill=#1, anchor=north, 
              minimum width=\paperwidth, minimum height=3.5cm] 
              (header) at (current page.north){};
        
        % Text Content
        \node[align=center, anchor=south, yshift=0.5cm] at (header.south) {
            {\Large \color{#4} \textbf{#2}}\\[0.5em]
            {\huge \color{white} #3}
        };
    \end{tikzpicture}
\end{minipage}
\par\vspace{-1em} % Ensure the baseline is reset
}


